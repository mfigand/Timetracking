
<%= flash_message %>

<% if @entry.errors.any? %>
  <ul>
    <% @entry.errors.full_messages.each do |error| %>
     <li><%= error %> </li>
    <% end %>
  </ul>
<% end%>


<%= form_for [@project, @entry] do |f| %>
  <%= f.label :hours %>
  <%= f.text_field :hours, size: 4 %>
  <br>
  <%= f.label :minutes %>
  <%= f.text_field :minutes, size: 4 %>
  <br>
  <%= f.label :date %>
  <%= f.date_field :date, size: 4 %>
  <br>

  <%= f.submit 'Save' %>

<% end %>

<%= link_to("Back to entries", project_entries_path) %>
